# Server Configuration
PORT=3000
NODE_ENV=development

# HubSpot Configuration
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_BASE_URL=https://api.hubapi.com

# Adobe Configuration
ADOBE_API_KEY=your_adobe_api_key_here
ADOBE_API_SECRET=your_adobe_api_secret_here
ADOBE_BASE_URL=https://your-adobe-instance.commercecloud.salesforce.com
ADOBE_ACCESS_TOKEN_URL=https://your-adobe-instance.commercecloud.salesforce.com/ccadmin/v1/oauth/token

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=1000

# Cron Schedule Configuration
# Format: minute hour day month day-of-week
# Example: '0 2 * * *' = Run at 2:00 AM every day
NIGHTLY_SYNC_SCHEDULE=0 2 * * *
